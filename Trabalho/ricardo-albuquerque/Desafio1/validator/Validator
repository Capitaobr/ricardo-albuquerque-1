<?php

	class Validator {

	public function validatorRequest($method){

	if($method == "GET" || $method == "POST" || $method == "PUT" || $method == "DELETE"){

	return true;

} else{ 

	return false;

}

}

	public function validatorHTTP($protocol){
	

	if(strpos($_SERVER['SERVER_PROTOCOL'], "HTTP") || strpos($_SERVER['SERVER_PROTOCOL'], "HTTPS")){

	return true;
} else { return false }

}

}


